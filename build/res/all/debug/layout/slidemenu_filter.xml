<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00444444"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/slidemenu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Playlist Filters"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/slidemenu_number_of_episodes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes to show"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/slidebar_number_of_episodes"
        android:entries="@array/entryvalues_spinner_number_of_episodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/slidebar_show_listened_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show listened"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/slidebar_show_listened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch" />

</LinearLayout>
