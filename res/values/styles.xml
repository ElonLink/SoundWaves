    <style  name="PlayerPlayPauseToggle"  parent="@style/PlayerControlButtons">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">?attr/playpause_icon</item>
    </style>

</resources>