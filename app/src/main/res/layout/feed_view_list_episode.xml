<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >
    <!--
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    -->

    <org.bottiger.podcast.views.PlayPauseImageView
        android:id="@+id/play_pause_button"
        android:layout_centerVertical="true"
        style="@style/FeedViewPlayPauseButton" />

    <org.bottiger.podcast.views.DownloadButtonView
        android:id="@+id/download_button"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        style="@style/FeedViewPlayPauseButton" />

    <!--
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        >-->


    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Podcast Title"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/download_button"
        android:layout_toRightOf="@+id/play_pause_button"/>
    <!--
        style="@style/AudioFileInfoOverlayText" -->

</RelativeLayout>