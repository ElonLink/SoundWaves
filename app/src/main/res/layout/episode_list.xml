<?xml version="1.0" encoding="utf-8"?>
<org.bottiger.podcast.views.RelativeLayoutWithBackground
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_margin="@dimen/playlist_margin"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_weight="1"
    android:animateLayoutChanges="false"
    android:clipChildren="false"
    android:orientation="horizontal">

    <org.bottiger.podcast.views.ImageViewTinted
        android:id="@+id/item_background"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:alpha="1"/>

    <RelativeLayout
        android:id="@+id/main_player_container"
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="120dp">

    <org.bottiger.podcast.views.PlayPauseImageView
         style="@style/PodcastImage"
         android:id="@+id/list_image"
         android:layout_alignParentRight="true"
         android:layout_marginTop="50dp"
         android:layout_marginRight="20dp"
         android:paddingLeft="14dip"
         android:padding="0dip"
         android:elevation="8dp"/>

            <TextView
                android:id="@+id/current_position"
                style="@style/EpisodeMinorFont"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_image" />

            <TextView
                android:id="@+id/time_slash"
                style="@style/EpisodeMinorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/current_position"
                android:layout_alignBottom="@+id/current_position"
                android:layout_toRightOf="@+id/current_position"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/duration"
                style="@style/EpisodeMinorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time_slash"
                android:layout_alignBottom="@+id/time_slash"
                android:layout_toRightOf="@+id/time_slash" />

            <TextView
                android:id="@+id/filesize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/duration"
                android:layout_toRightOf="@+id/duration"
                android:gravity="bottom|right"
                android:text="0"
                android:textSize="10dip"
                android:textStyle="bold" />

        <FrameLayout
            android:id="@id/drag_handle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:paddingBottom="10dp"
            android:paddingTop="30dp" >

            <LinearLayout
                android:layout_width="14dp"
                android:layout_height="fill_parent"
                android:background="@drawable/drag_handle"
                android:orientation="vertical"
                android:tileMode="repeat" >

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>


    <include layout="@layout/extended_player"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/main_player_container"/>

</org.bottiger.podcast.views.RelativeLayoutWithBackground>