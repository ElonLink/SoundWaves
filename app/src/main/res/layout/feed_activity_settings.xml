<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:id="@+id/feed_activity_settings_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:visibility="invisible"
    android:paddingTop="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:paddingBottom="10dp"
        android:columnCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        >

        <TextView
            android:text="@string/feed_settings_intro"
            style="@style/FeedActivitySettingsTextStyle"
            android:textSize="16sp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_marginBottom="15dp"
            />

        <TextView
        android:text="@string/feed_settings_show_description"
        style="@style/FeedActivitySettingsTextStyle"
        android:layout_column="0"
        android:layout_row="1"
        />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/feed_description_switch"
            style="@style/FeedActivitySettingsSwitchStyle"
            android:layout_column="1"
            android:layout_row="1"/>


        <TextView
            android:text="@string/feed_settings_in_playlist"
            style="@style/FeedActivitySettingsTextStyle"
            android:layout_column="0"
            android:layout_row="2"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/feed_add_to_playlist_switch"
            style="@style/FeedActivitySettingsSwitchStyle"
            android:layout_column="1"
            android:layout_row="2"/>

        <TextView
            android:text="@string/feed_settings_download_new"
            style="@style/FeedActivitySettingsTextStyle"
            android:layout_column="0"
            android:layout_row="3"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/feed_auto_download_switch"
            style="@style/FeedActivitySettingsSwitchStyle"
            android:layout_column="1"
            android:layout_row="3"/>

        <TextView
            android:text="@string/feed_settings_delete_when_listened"
            style="@style/FeedActivitySettingsTextStyle"
            android:layout_column="0"
            android:layout_row="4"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/feed_auto_delete_switch"
            style="@style/FeedActivitySettingsSwitchStyle"
            android:layout_column="1"
            android:layout_row="4"/>

        <TextView
            android:text="@string/feed_settings_oldest_first"
            style="@style/FeedActivitySettingsTextStyle"
            android:layout_column="0"
            android:layout_row="5"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/feed_oldest_first_switch"
            style="@style/FeedActivitySettingsSwitchStyle"
            android:layout_column="1"
            android:layout_row="5"/>

    </GridLayout>

</FrameLayout>

</merge>