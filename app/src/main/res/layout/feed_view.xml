<?xml version="1.0" encoding="utf-8"?>
<org.bottiger.podcast.views.RelativeLayoutWithBackground
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop">
    </ImageView>

    <View
        android:id="@+id/background_gradient"
        android:background="@drawable/header_gradient"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/feed_title"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white_opaque"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:textSize="32dp"/>
        <!-- android:background="@color/black" -->
        <!-- android:textStyle="bold" -->

        <LinearLayout
            android:layout_below="@id/feed_title"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="60dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feedview_lower_gradient">

            <org.bottiger.podcast.views.FeedViewSwitch
                android:hapticFeedbackEnabled="true"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- android:text="Exclude from playlist" -->

            <TextView
                android:id="@+id/switch_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/white_opaque"
                android:singleLine="true"
                android:text="Exclude from playlist"
                android:textSize="14dp"/>

            <!--
        <Switch
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            android:background="@color/white_opaque"
            android:hapticFeedbackEnabled="true"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Download all" />
            -->

        </LinearLayout>

    </RelativeLayout>

    <org.bottiger.podcast.views.FeedRecyclerView
        android:id="@+id/feed_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_container"
        android:background="@color/white_opaque"
        />
    <!--         android:background="@color/blackWithAlpha" -->

    <org.bottiger.podcast.views.FloatingActionButton
        android:id="@+id/feedview_fap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_receipt_white"
        android:layout_below="@+id/top_container"/>

</org.bottiger.podcast.views.RelativeLayoutWithBackground>