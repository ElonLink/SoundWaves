<?xml version="1.0" encoding="utf-8"?>
<org.bottiger.podcast.views.FeedRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_refresh_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <org.bottiger.podcast.views.RelativeLayoutWithBackground
        android:id="@+id/top_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_container"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="centerCrop">
        </ImageView>

        <View
            android:id="@+id/background_gradient"
            android:background="@drawable/header_gradient"
            android:layout_width="match_parent"
            android:layout_height="170dp">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

        <TextView
                android:id="@+id/feed_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/white_opaque"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:textSize="32dp"/>
            <!-- android:background="@color/black" -->
            <!-- android:textStyle="bold" -->

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/feed_title"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Switch
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            android:background="@color/white_opaque"
            android:hapticFeedbackEnabled="true"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Download all" />

        <Switch
            android:layout_alignParentLeft="true"
            android:textSize="11sp"
            android:background="@color/white_opaque"
            android:hapticFeedbackEnabled="true"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Exclude from playlist" />
        </LinearLayout>

        </RelativeLayout>

    <org.bottiger.podcast.views.FeedRecyclerView
        android:id="@+id/feed_recycler_view"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_container"
        android:background="@color/white_opaque"
        />

        <!--         android:background="@color/blackWithAlpha" -->

    </org.bottiger.podcast.views.RelativeLayoutWithBackground>


</org.bottiger.podcast.views.FeedRefreshLayout>