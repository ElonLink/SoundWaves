<?xml version="1.0" encoding="utf-8"?>
<org.bottiger.podcast.views.MultiShrink.MultiShrinkScroller
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multiscroller"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/transparent_view"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <!-- android:layout_height="@dimen/quickcontact_starting_empty_height" -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_parent">

            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:id="@+id/tb_blue"
                android:background="@color/blue"/>
                -->
            <include layout="@layout/feed_activity_header" />

            <!--<include layout="@layout/quickcontact_header" />-->
        </FrameLayout>

        <include layout="@layout/feed_activity_content" />

        <View
            android:id="@+id/redview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red" />

        <ImageView
            android:id="@+id/background_container"
            android:src="@color/red"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:scaleType="centerCrop">
        </ImageView>

    </LinearLayout>

    <View
        android:id="@+id/background_gradient"
        android:background="@drawable/header_gradient"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="150dp">
    </View>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <View
            android:id="@+id/photo_touch_intercept_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlays/gradients that can be used to make white text/buttons visible -->
        <View
            android:id="@+id/title_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="bottom" />

        <View
            android:id="@+id/action_bar_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="top" />

        <TextView
            android:id="@+id/feed_title"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white_opaque"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:textSize="32dp"/>
        <!-- android:background="@color/black" -->
        <!-- android:textStyle="bold" -->

        <LinearLayout
            android:layout_below="@id/feed_title"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="60dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feedview_lower_gradient">

            <org.bottiger.podcast.views.FeedViewSwitch
                android:hapticFeedbackEnabled="true"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- android:text="Exclude from playlist" -->

            <TextView
                android:id="@+id/switch_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/white_opaque"
                android:singleLine="true"
                android:text="Exclude from playlist"
                android:textSize="14dp"/>

            <!--
        <Switch
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            android:background="@color/white_opaque"
            android:hapticFeedbackEnabled="true"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Download all" />
            -->

        </LinearLayout>

    </FrameLayout>

    <org.bottiger.podcast.views.MultiShrink.TouchlessScrollView
        android:id="@+id/feed_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!--         android:background="@color/red"-->

        <FrameLayout
            android:id="@+id/feed_scrollviewChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_start_column"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


            <View
                android:id="@+id/greenview"
                android:layout_width="match_parent"
                android:layout_height="200dp"  />
            <!--
        <org.bottiger.podcast.views.FeedRecyclerView
            android:id="@+id/feed_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_container"
            android:background="@color/white_opaque"
            />
            -->

        <View
            android:id="@+id/empty_end_column"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        </FrameLayout>

    </org.bottiger.podcast.views.MultiShrink.TouchlessScrollView>

    <org.bottiger.podcast.views.FloatingActionButton
        android:id="@+id/feedview_fap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_receipt_white"
        android:layout_below="@+id/top_container"/>

</org.bottiger.podcast.views.MultiShrink.MultiShrinkScroller>