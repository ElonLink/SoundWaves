<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscription_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/subscription_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/subscription_empty_arrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="100dp"
            android:text="â†‘"/>

        <TextView
            android:id="@+id/subscription_empty_text"
            android:layout_below="@+id/subscription_empty_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/subscription_instruction"/>

        <org.bottiger.podcast.views.SquareImageView
            android:id="@+id/subscription_empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subscription_empty_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/find_subscription"/>

    </RelativeLayout>

</FrameLayout>